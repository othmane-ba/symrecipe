{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Formulaire de connexion</h1>
    {% if error %}
    <div class="alert alert-danger mt-4">
  {{ error.messageKey|trans(error.messageData, 'security') }}
</div>
        <div></div>
    {% endif %}
    <form action="{{path('security.login')}}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Adresse Email</label>
            <input type="email" class="form-control" id="username" placeholder="email@symrecipe.com" name="_username" value="{{last_username}}">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe</label>
            <input type="password" class="form-control" id="password" placeholder="********" name="_password">
        </div>
        <button class="btn btn-primary mt-4" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
